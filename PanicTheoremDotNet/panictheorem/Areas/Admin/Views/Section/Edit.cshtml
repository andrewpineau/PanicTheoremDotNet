@model panictheorem.Areas.Admin.Models.SectionModel

@{
    ViewBag.Title = "Edit Section";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Section</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Section.SectionId)

        <div class="form-group">
            @Html.LabelFor(model => model.Section.WebPageId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Section.WebPageId, Model.WebPageSelectList)
                @Html.ValidationMessageFor(model => model.Section.WebPageId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.SectionType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Section.SectionType, Model.SectionTypeSelectList)
                @Html.ValidationMessageFor(model => model.Section.SectionType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Section.Title)
                @Html.ValidationMessageFor(model => model.Section.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.Body, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Section.Body, new { @class = "content-area" })
                @Html.ValidationMessageFor(model => model.Section.Body)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.ImageUrl, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Section.ImageUrl)
                @Html.ValidationMessageFor(model => model.Section.ImageUrl)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.ButtonId, "ButtonId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Section.ButtonId, Model.ButtonSelectList, "None")
                @Html.ValidationMessageFor(model => model.Section.ButtonId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Section.SortOrder, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Section.SortOrder)
                @Html.ValidationMessageFor(model => model.Section.SortOrder)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
