@model panictheorem.Domain.Entities.BlogPost

@{
    ViewBag.Title = "Blog Post Details";
}

<h2>Details</h2>

<div>
    <h4>BlogPost</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PostingDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostingDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Content)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UrlSegment)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UrlSegment)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Labels)
        </dt>
        <dd>
            @foreach(var label in Model.Labels)
            {
               @label.Name<br/>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BlogPostId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
